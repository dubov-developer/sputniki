.menu
  position absolute
  z-index 1
  top rem(90, 17)
  left rem(95, 17)

  &__list
    list-style-type none
    padding 0
    margin 0
    white-space nowrap

  &__item
    display inline-block
    padding 0 rem(5, 17)

  &__item + &__item
    margin-left rem(60, 17)

  &__link
    display block
    position relative
    color #fff
    font-weight 300
    text-decoration none
    font-size rem(16, 17)
    line-height 1.5

    &.active,
    &:hover
      &:before
        transform scaleX(1)

    &:before
      content ''
      position absolute
      bottom rem(-7, 17)
      width 100%
      height 2px
      background-color #fff
      transform-origin 0% 50%
      transform scaleX(0)
      transition transform 0.3s ease-in-out
