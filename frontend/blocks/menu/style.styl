@import '../../variables.styl';

.menu
  position absolute
  z-index 1
  top rem(80, 17)
  left rem(95, 17)

  +width-lessthan(tablet)
    top rem(110, 17)
    left rem(40, 17)

  &__list
    list-style-type none
    padding 0
    margin 0
    white-space nowrap

  &__item
    display inline-block
    padding 0 rem(5, 17)
    +width-lessthan(tablet)
      display block

  &__item + &__item
    margin-left rem(60, 17)
    +width-lessthan(tablet)
      margin-left 0
      margin-top rem(30, 17)

  &__link
    display block
    position relative
    color #fff
    font-weight 300
    text-decoration none
    font-size rem(16, 17)
    line-height 1.5
    +width-lessthan(tablet)
      font-size rem(30, 17)
      display inline-block

    &.active,
    &:hover
      &:before
        transform scaleX(1)

    &:before
      content ''
      position absolute
      bottom rem(-7, 17)
      width 100%
      height 2px
      background-color #fff
      transform-origin 0% 50%
      transform scaleX(0)
      transition transform 0.3s ease-in-out
