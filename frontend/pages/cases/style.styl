.cases
  display block
  position relative
  margin-top 50vh

  &__content
    margin-left rem(75, 17)
    margin-top rem(-10, 17)

  &__title
    position relative
    font-size rem(60, 17)
    font-weight 500
    margin-bottom rem(32, 17)

.preview-cases
  margin-bottom rem(70, 17)
  margin-top rem(50, 17)

.preview-case
  display block
  text-decoration none
  width rem(535, 17)
  height rem(300, 17)
  position relative

  &:first-child
    .preview-case__background
      background-image-retina('./assets/case-1.jpg')
      background-size cover

  &:nth-child(2)
    .preview-case__background
      background-image-retina('./assets/case-2.jpg')
      background-size cover

  &:nth-child(3)
    .preview-case__background
      background-image-retina('./assets/case-3.jpg')
      background-size cover

  &:nth-child(4)
    .preview-case__background
      background-image-retina('./assets/case-4.jpg')
      background-size cover

  &__background
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-repeat no-repeat

  &__animation
    position absolute
    background-color #000
    top 0
    right 0
    width rem(40, 17)
    height 100%

  &__content
    position absolute
    bottom rem(40, 17)
    left rem(40, 17)
    color #fff

  &__description
    font-size rem(18, 17)
    font-weight 300
    letter-spacing rem(1, 17)
  
  &__title
    font-size rem(36, 17)
    line-height 1.2
    font-weight 500
    margin-bottom rem(40, 17)

.preview-case + .preview-case
  margin-top rem(70, 17)

.case-select-wrapper
  position relative
  z-index 10
  height rem(46, 17)


.action-line_cases
  .action-line
    &__options-line
      width rem(320, 17)

.case-select
  height rem(46, 17)
  position relative

  .action-line
    position relative
    z-index 3

  &.stucked
    .case-select__overlay
      display block

  &__overlay
    position absolute
    top -420px
    left 0
    right -5px
    height 500px
    background-color #000
    display none

.case-select-dropdown
  display none
  position absolute
  top rem(16, 17)
  left 0
  width rem(535, 17)

  &__background
    background-color #514845
    position absolute
    top rem(-54, 17)
    bottom rem(-40, 17)
    left rem(-70, 17)
    right rem(-65, 17)
    transform scaleY(0)

  &__items
    position relative
    z-index 2
    display block
    opacity 0
    visibility hidden
    clearfix()

  &__group
    float left
    width rem(265, 17)
    margin-top rem(42, 17)

  &__group + &__group
    width auto
  
  &__item
    font-size rem(16, 17)
    font-weight 300
    letter-spacing rem(1, 17)
    
    span 
      position relative
      cursor pointer

      &:before
        content ''
        position absolute
        bottom rem(-9, 17)
        width 100%
        height 2px
        background-color #fff
        transform scaleX(0)
        transition transform 0.3s ease-in-out
        transform-origin 0% 50%

      &:hover
        &:before
          transform scaleX(1)

    &.active
      span
        &:before
          transform scaleX(1)
  
  &__item + &__item
    margin-top rem(42, 17)

