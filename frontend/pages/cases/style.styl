.cases
  display block
  position relative
  margin-top 50vh

  &__content
    margin-left rem(75, 17)
    margin-top rem(-10, 17)

  &__title
    position relative
    font-size rem(60, 17)
    font-weight 500
    margin-bottom rem(50, 17)

.preview-cases
  margin-bottom rem(70, 17)
  margin-top rem(50, 17)

.preview-case
  width rem(535, 17)
  height rem(300, 17)
  position relative
  
  &:first-child
    .preview-case__background
      background-image-retina('./assets/case-1.jpg')
      background-size cover

  &:nth-child(2)
    .preview-case__background
      background-image-retina('./assets/case-2.jpg')
      background-size cover

  &:nth-child(3)
    .preview-case__background
      background-image-retina('./assets/case-3.jpg')
      background-size cover

  &:nth-child(4)
    .preview-case__background
      background-image-retina('./assets/case-4.jpg')
      background-size cover

  &__background
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-repeat no-repeat
  
  &__content
    position absolute
    bottom rem(40, 17)
    left rem(40, 17)

  &__description
    font-size rem(18, 17)
    font-weight 300
    letter-spacing rem(1, 17)
  
  &__title
    font-size rem(36, 17)
    line-height 1.2
    font-weight 500
    margin-bottom rem(40, 17)

.preview-case + .preview-case
  margin-top rem(70, 17)
