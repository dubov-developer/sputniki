.cases
  display block
  position relative
  margin-top 50vh

  &__content
    margin-left rem(75, 17)
    margin-top rem(-10, 17)

  &__title
    position relative
    font-size rem(60, 17)
    font-weight 500
    margin-bottom rem(32, 17)

.preview-cases
  margin-bottom rem(70, 17)
  margin-top rem(50, 17)

.preview-case
  display block
  text-decoration none
  width rem(535, 17)
  height rem(300, 17)
  position relative

  &:hover
    .preview-case__hover-item_top
      transform translateY(0)

    .preview-case__hover-item_bottom
      transform translateY(0)

    .preview-case__hover-item_left
      transform translateX(0)

    .preview-case__hover-item_right
      transform translateX(0)

  &:first-child
    .preview-case__background
      background-image-retina('./assets/case-1.jpg')
      background-size cover

  &:nth-child(2)
    .preview-case__background
      background-image-retina('./assets/case-2.jpg')
      background-size cover

  &:nth-child(3)
    .preview-case__background
      background-image-retina('./assets/case-3.jpg')
      background-size cover

  &:nth-child(4)
    .preview-case__background
      background-image-retina('./assets/case-4.jpg')
      background-size cover

  &__background
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-repeat no-repeat

  &__hover
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  &__hover-item
    position absolute
    background-color #000
    transition transform 0.4s ease-in-out

    &_top
      top 0
      width 100%
      height rem(10, 17)
      transform translateY(-100%)

    &_left
      top 0
      left 0
      width rem(10, 17)
      height 100%
      transform translateX(-100%)

    &_right
      top 0
      right 0
      width rem(10, 17)
      height 100%
      transform translateX(100%)

    &_bottom
      bottom 0
      width 100%
      height rem(10, 17)
      transform translateY(100%)

  &__content
    position absolute
    bottom rem(40, 17)
    left rem(40, 17)
    color #fff

  &__description
    font-size rem(18, 17)
    font-weight 300
    letter-spacing rem(1, 17)
  
  &__title
    font-size rem(36, 17)
    line-height 1.2
    font-weight 500
    margin-bottom rem(40, 17)

.preview-case + .preview-case
  margin-top rem(70, 17)

.case-select-wrapper
  height rem(46, 17)

.case-select
  z-index 10
  height rem(46, 17)

  .action-line
    position relative
    z-index 2

  &.stucked
    .case-select__overlay
      display block

  &__overlay
    position absolute
    top -420px
    left 0
    right -5px
    height 500px
    background-color #000
    display none
