.section_contacts
  position relative
  h1
    position relative
    overflow hidden
    font-size rem(60, 17)
    font-weight 500
    margin-bottom rem(47, 17)
    span
      display block

  .section
    &__content
      margin-top rem(-10, 17)
      position absolute
      top 50%

.section_contacts-hello
  position relative
  h1
    margin-bottom 0
    margin-right rem(50, 17)

  .section
    &__content
      display flex
      align-items center

.address
  display block
  text-decoration none
  position relative
  margin-bottom rem(60, 17)

  &:hover
    .address__icon
      imgboxrem('./assets/pin-hover.png', 17)

    .address__text
      span
        &:after
          transform scaleX(1)
  
  &__icon
    imgboxrem('./assets/pin.png', 17)
    display inline-block
    vertical-align middle
    transition background-image 0.3s ease-in-out

  &__text
    margin-left rem(20, 17)
    font-size rem(19, 17)
    letter-spacing rem(1, 17)
    font-weight 300
    display inline-block
    vertical-align middle
    color #fff
    text-decoration none
    
    span
      position relative
      &:after
        content ''
        position absolute
        left 0
        bottom rem(-12, 17)
        width 100%
        height 2px
        background-color #fff
        transform scaleX(0)
        transform-origin 0 50%
        transition transform 0.5s ease-in-out

