extends ../layout.pug

block content
  .barba-container(data-namespace="case", data-case="5-ozer")
    a.back(data-dom-module="back", href="cases.html")
    .page-container.page-container_case
      .case(data-dom-module="video", data-case="5-ozer")
        .case-promo.case-promo_5-ozer(data-dom-module="case-promo", data-video='[{ "name": "1 серия", "videoId": "HtYVCRmCwjo"}, { "name": "2 серия", "videoId": "8pzuo-CPISc"}, { "name": "3 серия", "videoId": "cv4u6X0yVCQ"}, { "name": "4 серия", "videoId": "Wo41jZMUvXU"}, { "name": "5 серия", "videoId": "zcFNyLyvqiE"}]')
          .case-promo__background
          .case-promo__canvas-container(data-video-container)
          .case-promo__overlay
          .case-promo__info
            .case-promo__name. 
              На защите <br>
              душевного <br>
              отдыха
            .watch-video
              .watch-video__text.
                Смотреть
              .watch-video__circle
                .watch-video__hover
                .watch-video__icon
        .case-info
          .case-info__row
            .case-info__main
              .case-fact
                .case-fact__name Клиент
                .case-fact__title. 
                  АСГ <br>
                  Пять озер
              .case-fact
                .case-fact__name Услуги
                .case-fact__title Advertising campaigns
                .case-fact__title Video
                .case-fact__title Media
              .case-fact
                .case-fact__name Опции
                ul.case-fact__list
                  li Коммуникационная платформа
                  li Идея и сценарий
                  li Видео продакшн
                  li Ажиотаж
            .case-info__separator
            .case-info__additional
              .case-description
                .case-description__title Задача
                .case-description__text. 
                  Разработать коммуникационную платформу, <br>
                  которая добавит к функциональному <br>
                  преимуществу бренда (защита от подделок) <br>
                  эмоциональную составляющую.
              .case-description
                .case-description__title Решение
                .case-description__text. 
                  Мы решили, что «Пять Озер» это идеальный продукт для отдыха с близкими друзьями без суеты, мишуры, ложных ценностей и вот этого всего...плюс ко всему эту водку не подделать. <br> А значит водка «Пять Озер» стоит на «Защите душевного отдыха». <br>
                  Мы сняли минисериал о столкновении ценностей двух поколений. В главных ролях Сергей Писаренко и Юрий Хованский. 
          .case-slider.case-slider_5-ozer(data-dom-module="case-slider", data-slider="5-ozer")
            .case-slider__wrapper
            .case-slider__hover
              .case-slider__hover-icon.left
            .case-slider__pagination
              span.case-slider__pagination-current
              span.case-slider__pagination-separator /
              span.case-slider__pagination-count
          .case-results
            .case-description
              .case-description__title Результаты
              .case-description__text. 
                Просмотры <span>10 518 603</span> <br>
                VK <span>4 522 781</span> (выполнение плана <span>113%</span>) <br>
                OK <span>2 148 545</span> (выполнение плана <span>143,24%</span>) <br>
                YT Хованский <span>882 622</span> (выполнение плана <span>176,52%</span>) <br>
                YT Канал бренда <span>2 964 655</span> (выполнение плана <span>592,93%</span>)
        a.case-next.case-next_kotex-active(href="case-kotex-active.html")
          .case-next__overlay
          .case-next__info
            .case-next__name. 
              Kotex Active
            .next-case-button
              .next-case-button__text. 
                Следующий <br> кейс
              .next-case-button__icon
