.case-promo
  width 100%

.back
  display flex
  align-items center
  justify-content center
  position absolute
  top rem(80, 17)
  left rem(45, 17)
  width rem(67, 17)
  height rem(67, 17)
  border 1px solid #514745
  box-sizing border-box
  border-radius 50%

  &:after
    content ''
    position relative
    z-index 1
    imgbox('./assets/arrow-left.png')

  &:before
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color #514745
    border-radius 50%
    transform scale(0)
    transition transform 0.25s ease-in-out

  &:hover
    &:before
      transform scale(1)

.case-promo
  position relative
  display flex
  align-items center
  margin-top rem(80, 17)
  height rem(540, 17)
  background-image-retina('./assets/case-1.png')
  background-repeat no-repeat
  background-size cover

  &__overlay
    position absolute
    top 0
    left 0
    height 100%
    width 100%
    background-color rgba(0, 0, 0, 0.5)

  &__info
    position relative
    display flex
    width 100%
    justify-content space-between
    align-items center

  &__name
    margin-left rem(65, 17)
    font-size rem(72, 17)
    line-height 1.2
    font-weight 500
    color #fff

.watch-video
  display flex
  align-items center
  margin-right rem(95, 17)
  cursor pointer

  &__text
    font-size rem(18, 17)
    line-height 1.3
    font-weight 300
    margin-right rem(30, 17)

  &__icon
    imgboxrem('./assets/watch-video.png', 17)

  
.case-info
  position relative
  margin rem(155, 17) 0
  display flex

  &__main
    width rem(220, 17)
    margin-right rem(260, 17)

  &__separator
    position absolute
    left rem(314, 17)
    top 0
    width 1px
    background-color #514845
    height 100%

.case-description
  width rem(465, 17)

  &__title
    font-size rem(36, 17)
    font-weight 500
    letter-spacing rem(2, 17)
    margin-bottom rem(40, 17)

  &__text
    font-size rem(18, 17)
    line-height rem(36, 17)
    font-weight 300
    letter-spacing rem(1.3, 17)

.case-description + .case-description
  margin-top rem(135, 17)

.case-fact
  &__name
    font-size rem(12, 17)
    font-weight 300
    color #766764
    letter-spacing rem(1.8, 17)
    margin-bottom rem(32, 17)

  &__title
    font-size rem(24, 17)
    font-weight 300
    letter-spacing rem(1.2, 17)
  
  &__list
    margin 0
    padding 0
    list-style-type none

    li
      position relative
      padding-left rem(18, 17)
      font-size rem(16, 17)
      font-weight 300
      line-height rem(37, 17)


      &:before
        content 'â€¢'
        position absolute
        left 0
        color #5f534f
        font-size rem(14, 17)

  &__title + &__list
    margin-top rem(16, 17)

.case-fact + .case-fact
  margin-top rem(125, 17)
