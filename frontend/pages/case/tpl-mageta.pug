extends ../layout.pug

block content
  .barba-container(data-namespace="case", data-case="mageta")
    a.back(data-dom-module="back", href="cases.html")
    .page-container.page-container_case
      .case(data-dom-module="video", data-case="mageta")
        .case-promo.case-promo_mageta(data-dom-module="case-promo", data-video='[{ "name": "Кейс", "videoId": "O479bhiYqb4"}]')
          .case-promo__background
          .case-promo__canvas-container(data-video-container)
          .case-promo__overlay
          .case-promo__info
            .case-promo__name. 
              Мам, <br>
              ну ты Магёшь
            .watch-video
              .watch-video__text.
                Смотреть
              .watch-video__circle
                .watch-video__hover
                .watch-video__icon
        .case-info
          .case-info__row
            .case-info__main
              .case-fact
                .case-fact__name Клиент
                .case-fact__title. 
                  Русская Бакалейная <br>
                  Компания
              .case-fact
                .case-fact__name Услуги
                .case-fact__title Advertising campaigns
                .case-fact__title Video
                .case-fact__title Media
                .case-fact__title SMM
                .case-fact__title Digital
              .case-fact
                .case-fact__name Опции
                ul.case-fact__list
                  li Идея и сценарий
                  li Видео продакшн
                  li Онлайн СМИ
                  li SMM
            .case-info__separator
            .case-info__additional
              .case-description
                .case-description__title Задача
                .case-description__text. 
                  Анонс новой линейки натуральных <br> приправ и пряностей «Магета» эконом <br> класса.
              .case-description
                .case-description__title Решение
                .case-description__text. 
                  Food porn, региональный слэнг <br>
                  и благодарность близких- то, <br>
                  что  вы увидите уже никогда не развидеть. <br>
                  А так же брендинг кулинарных порталов <br>
                  и видео рецепты. 
          .case-slider.case-slider_mageta(data-dom-module="case-slider", data-slider="mageta")
            .case-slider__wrapper
            .case-slider__hover
              .case-slider__hover-icon.left
            .case-slider__pagination
              span.case-slider__pagination-current
              span.case-slider__pagination-separator /
              span.case-slider__pagination-count
          .case-results
            .case-description
              .case-description__title Результаты
              .case-description__text. 
                Реализация проекта за <span>7</span> дней.
        a.case-next.case-next_husky(href="case-husky.html")
          .case-next__overlay
          .case-next__info
            .case-next__name. 
              Husky hockey <br>
              team
            .next-case-button
              .next-case-button__text. 
                Следующий <br> кейс
              .next-case-button__icon
