extends ../layout.pug

block content
  .barba-container(data-namespace="case", data-case="visa")
    a.back(data-dom-module="back", href="cases.html")
    .page-container.page-container_case
      .case(data-dom-module="video", data-case="visa")
        .case-promo.case-promo_visa(data-dom-module="case-promo", data-video='[{ "name": "Кейс", "videoId": "W3myk2KBW6g"}]')
          .case-promo__background
          .case-promo__canvas-container(data-video-container)
          .case-promo__overlay
          .case-promo__info
            .case-promo__name. 
              New year <br>
              prank
            .watch-video
              .watch-video__text.
                Смотреть
              .watch-video__circle
                .watch-video__hover
                .watch-video__icon
        .case-info
          .case-info__row
            .case-info__main
              .case-fact
                .case-fact__name Клиент
                .case-fact__title. 
                  VISA <br> 
                  Samsung pay
              .case-fact
                .case-fact__name Услуги
                .case-fact__title Video
                ul.case-fact__list
                  li Идея
                  li Сценарий
                  li Видео
            .case-info__separator
            .case-info__additional
              .case-description
                .case-description__title Задача
                .case-description__text. 
                  В преддверии Нового года рассказать <br>
                  о новой функции бесконтактной оплаты.
              .case-description
                .case-description__title Решение
                .case-description__text Новый год это время, когда мы особенно ждем чудес. А еще это время серьезных финансовых вложений в подарки. Чтобы рассказать о таком чуде как бесконтактные платежи, мы сняли видео в самом волшебном месте страны и сделали это в несколько провокационной форме.
          .case-slider.case-slider_visa(data-dom-module="case-slider", data-slider="visa")
            .case-slider__wrapper
            .case-slider__hover
              .case-slider__hover-icon.left
            .case-slider__pagination
              span.case-slider__pagination-current
              span.case-slider__pagination-separator /
              span.case-slider__pagination-count
          .case-results
            .case-description
              .case-description__title Результаты
              .case-description__text. 
                Реализация проекта за <span>7</span> дней.
        a.case-next.case-next_mageta(href="case-mageta.html")
          .case-next__overlay
          .case-next__info
            .case-next__name. 
              Мам, <br>
              ну ты Магёшь
            .next-case-button
              .next-case-button__text. 
                Следующий <br> кейс
              .next-case-button__icon
