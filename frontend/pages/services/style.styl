.services
  position relative
  top rem(-80, 17)
  margin-top 50vh
  margin-bottom rem(100, 17)

.service
  position relative
  width rem(720, 17)
  box-sizing border-box
  padding rem(80, 17) rem(80, 17) rem(80, 17) rem(90, 17)

  &:first-child
    .service__list:first-child
      width rem(325, 17)
  
  &__background
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color #514845
    transform-origin 100% 0%
    transform scale(0)

  &__wrapper
    position relative

  &__head
    cursor pointer

  &__header
    position relative
    margin-bottom rem(30, 17)

  &__title
    font-size rem(60, 17)
    line-height 1.15
    font-weight 500

  &__index
    position absolute
    font-weight 300
    top rem(7, 17)
    right 0
    font-size rem(19, 17)
    color #514845

  &__options
    display flex
    align-items center

  &__options-text
    font-size rem(16, 17)
    letter-spacing rem(1, 17)
    font-weight 300

  &__options-line
    width rem(405, 17)
    margin-left rem(30, 17)
    margin-right rem(15, 17)
    height 1px
    background-color #514845

  &__options-button
    width rem(46, 17)
    height rem(46, 17)
    border-radius 50%
    border 1px solid #514845
    cursor pointer
    position relative
  
  &__options-button-line
    position absolute
    background-color #fff
    top 50%
    left 50%
    
    &_h
      width 10px
      height 1px
      margin-left -5px

    &_v
      width 1px
      height 10px
      margin-top -5px

  &__content
    height 0
    overflow hidden

  &__content-description
    margin-top rem(40, 17)
    font-size rem(18, 17)
    line-height rem(30, 17)
    font-weight 300
    letter-spacing rem(1, 17)
    width 80%
    margin-bottom rem(35, 17)

  &__list-group
    clearfix()

  &__list
    list-style-type none
    margin 0
    padding 0
    float left

    li
      position relative
      font-size rem(14, 17)
      padding-left rem(25, 17)
      letter-spacing rem(1, 17)
      font-weight 300

      &:before
        position absolute
        left 0
        content 'â€¢'

    li + li
      margin-top rem(17, 17)
