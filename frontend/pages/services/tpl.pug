block content
  .barba-container(data-namespace="servicespage")
    .page-container
      .services(data-dom-module="services")
        .service
          .service__background
          .service__wrapper
            .service__head
              .service__header
                .service__title.
                  Advertising <br> Campaigns
                .service__index 01
              .service__options
                .service__options-text Опции
                .service__options-line
                .service__options-button
                  .service__options-button-line.service__options-button-line_h
                  .service__options-button-line.service__options-button-line_v
