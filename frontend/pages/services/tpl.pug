                  li Вовлекающая активация
                  li Стимулирующая акция
                  li Призовоий фонд
                  li Офлайн-поддержка
        .service
          .service__background
          .service__wrapper
            .service__head
              .service__header
                .service__title.
                  BTL & Trade
                .service__index 02
              .service__options
                .service__options-text Опции
                .service__options-line
                .service__options-button
                  .service__options-button-line.service__options-button-line_h
                  .service__options-button-line.service__options-button-line_v
            .service__content
              p.service__content-description Разработка и реализация треийд-маркетинговых программ и программ лояльности.
              .service__list-group
                ul.service__list
                  li Стимулирующая акция
                  li Мероприятия с участием специализированного промоперсонала
