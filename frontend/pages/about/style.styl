.facts
  margin-top rem(60, 17)

.fact
  position relative
  padding-top rem(100, 17)
  padding-bottom rem(130, 17)

  .description
    position relative
    z-index 2

  &__line
    top 0
    left 0
    width rem(536, 17)
    height 1px
    background-color #514845
    position absolute

.fact_year
  padding-bottom rem(180, 17)
  .description
    position absolute
    bottom rem(120, 17)
    left rem(120, 17)

  .fact
    &__number
      imgboxrem('./assets/year.png', 17.5)

.fact_offices
  padding-bottom rem(155, 17)
  .description
    position absolute
    bottom rem(130, 17)
    left rem(295, 17)

  .fact
    &__number
      imgboxrem('./assets/offices.png', 17.5)

.fact_employees
  padding-bottom rem(240, 17)
  .description
    position absolute
    bottom rem(130, 17)
    left 0

  .fact
    &__number
      imgboxrem('./assets/employees.png', 17.5)

.fact_talents
  .description
    position absolute
    bottom rem(50, 17)
    left rem(230, 17)

  .fact
    &__number
      imgboxrem('./assets/talents.png', 18)

.fact:first-child
  .fact__line
    display none

.ratings
  margin-top rem(100, 17)
  margin-bottom rem(150, 17)

  &__title
    font-size rem(30, 17)
    line-height rem(36, 17)
    letter-spacing rem(1.2, 17)
    margin-bottom rem(50, 17)

  &__block
    width rem(536, 17)
    height rem(335, 17)
    position relative

  &__background-block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-image-retina('./assets/ratings.png')
    background-size cover

  &__item
    position absolute
    display flex
    align-items center
    justify-content center

    &_1
      width rem(266, 17)
      height rem(133, 17)
      top 0
      left 0

      .ratings__logo
        imgboxrem('./assets/tagline.png', 17)

    &_2
      width rem(268, 17)
      height rem(202, 17)
      top 0
      right 0

      .ratings__logo
        imgboxrem('./assets/ruward.png', 17)

    &_3
      width rem(266, 17)
      height rem(202, 17)
      bottom 0
      left 0

      .ratings__logo
        imgboxrem('./assets/ramu.png', 17)

    &_4
      width rem(268, 17)
      height rem(133, 17)
      bottom 0
      right 0

      .ratings__logo
        imgboxrem('./assets/adindex.png', 17)
