@import './fonts/style.css';

html
  position fixed
  top 0
  left 0
  width 100%
  height 100%

body
  font-family 'Graphik LCG'
  height 100%
  background-color #000
  margin 0

#barba-wrapper
  height 100%

.fixed-container
  position fixed
  z-index 1
  top 0
  left 0
  height 100%

.logo
  display block
  position absolute
  top 50%
  left rem(100, 17)
  width rem(421, 17)
  height rem(99, 17)
  margin-top rem(-37, 17)

.social-list
  position absolute
  bottom rem(40, 17)
  left rem(100, 17)
  list-style-type none
  margin 0
  padding 0
  white-space nowrap

  &__item
    display inline-block
  
  &__item + &__item
    margin-left rem(40, 17)

  &__link
    display block

    &_fb, &_instagram
      width rem(30, 17)
      height rem(30, 17)

    &_youtube
      width rem(41, 17)
      height rem(30, 17)
