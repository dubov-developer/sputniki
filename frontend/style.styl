@import './fonts/style.css';

html
  position fixed
  top 0
  left 0
  width 100%
  height 100%

body
  font-family 'Graphik LCG'
  height 100%
  background-color #000
  color #fff
  margin 0

p
  margin 0

h1, h2
  margin 0
  padding 0

.custom-scroll
  height 100%


.scrollbar-track
  background transparent !important

.scrollbar-thumb
  border-radius 0 !important
  background #5e5955 !important

#barba-wrapper
  height 100%

.barba-container
  position relative
  overflow hidden
  width 100%

.fixed-container
  position fixed
  z-index 1
  top 0
  left 0
  height 100%

.page-container
  position relative
  width 59.6%
  margin-left 41.4%
  
.section
  position relative
  height 100vh
  display flex
  align-items center

  &__content
    margin-top rem(-18, 17)
    margin-left rem(75, 17)
    position absolute
    top 50%

.section + .section
  margin-top 0vh

.copyright
  font-size rem(12, 17)
  font-weight 300
  color rgba(255, 255, 255, .3)
  position absolute
  right rem(100, 17)
  bottom rem(62, 17)
