@import './fonts/style.css';
@import './variables.styl';

html
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  +width-lessthan(tablet)
    position relative
    top auto
    left auto
    width auto

body
  font-family 'Graphik LCG'
  height 100%
  background-color #000
  color #fff
  margin 0

p
  margin 0

h1, h2
  margin 0
  padding 0

.custom-scroll
  height 100%

.scrollbar-track
  background transparent !important

.scrollbar-thumb
  border-radius 0 !important
  background #5e5955 !important

#barba-wrapper
  height 100%

.barba-container
  position relative
  overflow hidden
  width 100%
  +width-lessthan(tablet)
    overflow visible

.fixed-container
  position fixed
  z-index 1
  top 0
  left 0
  height 100%
  +width-lessthan(tablet)
    display none

.page-container
  position relative
  width 59.6%
  margin-left 41.4%
  +width-lessthan(tablet)
    margin 0
    width 100%

  &_case
    width rem(960, 17)
    margin 0 auto

.section
  position relative
  height 100vh
  display flex
  align-items center
  +width-lessthan(tablet)
    height auto

  &__content
    margin-top rem(-18, 17)
    margin-left rem(75, 17)
    position absolute
    top 50%
    +width-lessthan(tablet)
      position static
      top auto
      margin-top 0
      margin-left auto
      margin-right auto
  
  &__row
    display flex
    flex-direction row

.section + .section
  margin-top 0vh
  +width-lessthan(tablet)
    margin-top 150px

.copyright
  position fixed
  right rem(100, 17)
  bottom rem(62, 17)
  font-size rem(12, 17)
  font-weight 300
  color rgba(255, 255, 255, .2)
  visibility hidden
  opacity 0

.contacts-info-links
  position relative
  overflow hidden
  
  &__item
    font-size rem(20, 17)
    font-weight 300
    color #5e5955
    text-decoration none
    display inline-block
    vertical-align middle
    transition color 0.3s ease-in-out
    &:hover
      color #a79d96

  &__separator
    display inline-block
    vertical-align middle
    height rem(19, 17)
    width 1px
    background-color #5e5955
    margin 0 rem(42, 17)

.telegram
  display block
  position relative
  height rem(50, 17)
  width rem(265, 17)
  display flex
  align-items center
  justify-content space-between
  text-decoration none
  transition background-color 0.3s ease-in-out

  &:hover
    .telegram__background, .telegram__border
      background-color #a79d96

  &__background
    position absolute
    top 0
    left rem(25, 17)
    right rem(25, 17)
    height 100%
    background-color #5e5955
    transition background-color 0.3s ease-in-out
    transform scaleX(1)
    transform-origin 0 50%

  &__border
    position absolute
    background-color #5e5955
    transition background-color 0.3s ease-in-out
    width rem(25, 17)
    height 100%

    &_left
      left 0
      border-radius 99999px 0 0 99999px

    &_right
      right 0
      border-radius 0 99999px 99999px 0

  &__text
    position relative
    color #fff
    font-size rem(14, 17)
    letter-spacing rem(0.5, 17)
    font-weight 300
    margin-left rem(25, 17)

  &__circle
    position relative
    width rem(37, 17)
    height rem(37, 17)
    background-color #fff
    margin-right rem(6, 17)
    border-radius 50%
    overflow hidden

  &__icon
    position absolute
    top 50%
    left 50%
    margin-top rem(-8.5, 17)
    margin-left rem(-11, 17)
    imgboxrem('./images/plane.png', 17)

.action-line
  display flex
  align-items center

  &:hover
    .action-line__options-button-hover
      transform scale(1)

  &__options-text
    font-size rem(16, 17)
    line-height 1.5
    letter-spacing rem(1, 17)
    font-weight 300

  &__options-line
    margin-left rem(30, 17)
    margin-right rem(15, 17)
    height 1px
    background-color #514845

  &__options-button
    flex-shrink 0
    width rem(47, 17)
    height rem(47, 17)
    border-radius 50%
    border 1px solid #514845
    cursor pointer
    position relative
    display flex
    align-items center
    justify-content center

  &__options-button-hover
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border-radius 50%
    background-color #514845
    transform scale(0)
    transition transform 0.25s ease-in-out

  &__options-button-lines
    position relative
    width 11px
    height 11px
  
  &__options-button-line
    position absolute
    background-color #fff

    &_h
      width 11px
      height 1px
      margin-top 5px

    &_v
      width 1px
      height 11px
      margin-left 5px

.action-line_service
  .action-line
    &__options-line
      width rem(405, 17)

.animation-common-block
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color #000

.hover
  position fixed
  z-index 1000
  top 0
  left 0
  width rem(40, 17)
  height rem(40, 17)
  background-color rgba(81, 72, 69, 0.8)
  border-radius 50%
  transform scale(0)
  cursor none
  pointer-events none

// Общие стили
.title
  font-size rem(60, 17)
  font-weight 500

.description
  font-size rem(30, 17)
  line-height rem(42, 17)
  font-weight 300
  letter-spacing rem(1.5, 17)

.page
  margin-top 50vh

  .title + .description
    margin-top rem(50, 17)

  &__content
    margin-left rem(75, 17)
    margin-top rem(-10, 17)

.mobile-header
  position fixed
  z-index 1
  top 0
  left 0
  width 100%
  height 80px
  display none
  background-color #000
  +width-lessthan(tablet)
    display block

.burger
  position absolute
  top 20px
  right 50px
  width 40px
  height 40px
  background-color #fff
